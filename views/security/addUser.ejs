<%- include('../includes/head.ejs') %>

<%- include('../includes/navigation.ejs', {html:html}, {html:html}) %>
<div class="col-lg-8">
    <%if(errors.length > 0) {%>
        <div class="alert alert-dismissible alert-danger">
            <ul>
                <%errors.forEach(error => {%>
                    <li><%=error%></li>
                <%})%>
            </ul>
        </div>
    <%}%>
    <form id="userAddForm" name="userAddForm" action="<%=user.length > 0 ? '/user/edit' : '/user'%>" method="post">
        <fieldset>
            <legend>Crear nuevo usuario</legend>
            <div class="form-group">
                <label for="user">Cédula</label>
                <input type="text" class="form-control" id="personalId" name="personalId"  placeholder="Agregue su cédula acá" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;"
                       value="<%= user.length > 0 ? user[0].personalId : ''  %>">
            </div>
            <div class="form-group">
                <label for="user">Nombre</label>
                <input type="text" class="form-control" id="fullName" name="fullName"  placeholder="Agregue su nombre completo acá" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: pointer;"
                       value="<%= user.length > 0 ? user[0].fullName : ''  %>">
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Agregue su contraseña acá" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;"
                       value="<%= user.length > 0 ? user[0].password : ''  %>">
            </div>
            <%if (user.length > 0) {%>
                <input type="hidden" value="<%= user[0].id%>" name="id">
            <%}%>
            <button type="submit" class="btn btn-success text-white">Confirmar</button>
        </fieldset>

    </form>
</div>

<%- include('../includes/end.ejs') %>

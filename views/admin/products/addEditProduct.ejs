<%- include('../../includes/head.ejs') %>

<%- include('../../includes/navigation.ejs', {html:html}) %>

<div class="col-lg-8">
    <form id="editProduct" name="editProduct"  action="<%=product.length > 0 ? '/product/edit' : '/product'%>" method="post">
        <fieldset>
            <legend>Informacion de Producto</legend>
            <div class="form-group">
                <label for="name">Descripcion</label>
                <input type="text" class="form-control" id="name" name="name"
                       value="<%= product.length > 0 ? product[0].name : ''  %>" >
            </div>
            <div class="form-group">
                <label for="price">Precio</label>
                <input type="number" class="form-control" id="price" name="price" value="<%= product.length > 0 ? product[0].price : ''  %>">
            </div>
            <div class="form-group">
                <label for="foodLine">Linea de Comida</label>
                <select class="form-control" id="foodLine" name="foodLine">
                    <%foodLines.forEach(line => {%>
                        <option value="<%=line.id%>"
                            <%if (product.length > 0) {%>
                                <%= line.id == product[0].fk_product_food_type_id ? 'selected' : '' %>
                            <%}%>><%=line.name%>
                        </option>
                    <%})%>
                </select>
            </div>
            <%if (product.length > 0) {%>
                <div class="form-group">
                    <label for="foodLine">Tipo De Precio</label>
                    <select multiple="" class="form-control" id="priceType" name="priceType">
                        <%priceTypes.forEach(type => {%>
                            <option value="<%=type.id%>"
                            <%= priceTypesForProduct.includes(type.id) ? 'selected' : '' %>
                            ><%=type.name%>
                            </option>
                        <%})%>
                    </select>
                </div>
            <%}%>

            <div class="form-group">
                <label for="imageFile">Imagen</label>
                <input type="text" class="form-control" id="imageFile" name="imageFile" value="<%= product.length > 0 ? product[0].image_url : ''  %>">
                <input type="file"  id="upload">
            </div>
            <%if (product.length > 0) {%>
                <input type="hidden" value="<%= product[0].id%>" name="id">
            <%}%>
            <button type="submit"  class="btn btn-success text-white">Confirmar</button>
        </fieldset>

    </form>
</div>

<%- include('../../includes/end.ejs') %>

<%- include('../includes/head.ejs') %>

<%- include('../includes/navigation.ejs', {html:html}, {html:html}) %>
<div class="col-xs-3">
    <a href="/schedule"><- Volver a ver Horarios</a>
</div>
<h1>Horario de <%= day %></h1>
<div class="row">
    <div class="col-xs-3">
        <table class="table table-hover ">
            <thead>
            <tr>
                <th scope="col">Hora</th>
                <th scope="col">Total</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <% schedules.forEach(day => { %>
                <tr class="table-primary">
                    <td><%= day.hour %></td>
                    <td><%= day.total %></td>
                    <td>
                        <a class="btn btn-success" href="/schedule/<%=day.id%>">Editar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="/schedule/delete/<%=day.id%>">Borrar</a>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../includes/end.ejs') %>

